<h1>Display your Pirate here</h1>
<h2><%= @pirate.name %> </h2>
<h2><%= @pirate.weight %> </h2>
<h2><%= @pirate.height %> </h2>

<% @ships.each.with_index(1) do |ship, index| %>
  <div class="ship">
    <p>Name: Ship <%= index %></p><br>
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p>
  </div><br>
<% end %>
